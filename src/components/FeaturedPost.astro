---
import { type CollectionEntry, getEntry } from "astro:content";
import { Image } from "astro:assets";

import CategoryList from "./CategoryList.astro";
import PostMeta from "./PostMeta.astro";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
const author = await getEntry("authors", post.data.author.id);
// const author = "ken dhillon";
---

<article
  class="grid grid-cols-2 px-6 md:px-12 gap-6 mb-6 max-sm:grid-cols-1 max-sm:mb-2"
>
  <a
    href={`/blog/${post.slug}`}
    aria-label={`Read more about ${post.data.title}`}
  >
    <Image
      loading="eager"
      src={post.data.image}
      alt={post.data.title}
      width={420}
      height={420 / 1.6}
      format="webp"
      quality={80}
      aspect-ratio="5:2"
      object-fit="cover"
      class="rounded-2xl shadow-xl mb-1 aspect-thumbnail object-cover"
    />
  </a>

  <div>
    <div class="m-1 md:mb-2">
      <CategoryList categories={post.data.categories} />
    </div>

    <a
      href={`/blog/${post.slug}`}
      class="capitalize text-xl md:text-2xl text-zinc-700 dark:text-zinc-200 mb-2 font-semibold inline-block"
    >
      {post.data.title}
    </a>

    <p
      class="text-zinc-500 dark:text-zinc-300 text-md md:text-xl mb-3 line-clamp-3 max-xl:line-clamp-2"
    >
      {post.body}
    </p>

    <div class="flex justify-between items-center">
      {author && <PostMeta post={post} />}
    </div>
  </div>
</article>
