---
import { type CollectionEntry, getEntry } from "astro:content";
import { Image } from "astro:assets";

import CategoryList from "./CategoryList.astro";
import PostMeta from "./PostMeta.astro";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
const author = await getEntry("authors", post.data.author.id);
// const author = "ken dhillon";
---

<article
  class="grid grid-cols-2 gap-x-12 gap-y-5 mb-6 max-lg:grid-cols-1 max-sm:mb-2"
>
  <a
    href={`/blog/${post.slug}`}
    aria-label={`Read more about ${post.data.title}`}
  >
    <Image
      loading="eager"
      src={post.data.image}
      alt={post.data.title}
      width={1024}
      height={1024 / 1.6}
      format="webp"
      class="rounded-2xl shadow-xl mb-1 aspect-thumbnail md:h-64 object-cover"
    />
  </a>

  <div>
    <div class="mb-4">
      <CategoryList categories={post.data.categories} />
    </div>

    <a
      href={`/blog/${post.slug}`}
      class="text-2xl md:text-3xl text-zinc-900 mb-4 font-bold inline-block"
    >
      {post.data.title}
    </a>

    <p
      class="text-zinc-500 text-xl md:text-2xl mb-9 line-clamp-3 max-xl:line-clamp-2"
    >
      {post.body}
    </p>

    <div class="flex justify-between items-center">
      {author && <PostMeta post={post} />}
    </div>
  </div>
</article>
