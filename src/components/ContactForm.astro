---
import { actions, isInputError } from "astro:actions";
---

<form
  id="contact-form"
  class="bg-teal-50 dark:bg-teal-900 dark:text-white md:w-2/3 mx-auto p-4 md:px-12 rounded-lg shadow-sm grid gap-4 md:gap-12 place-content-center text-muted-foreground"
>
  <h2 class="text-2xl font-bold">Contact Us</h2>
  <input type="hidden" name="action" value="contact" />
  <div class="flex flex-wrap gap-4">
    <div class="grid">
      <div class="flex gap-0.5">
        <label for="first_name">First Name</label>
        <span class="text-custom_green">*</span>
      </div>
      <input
        required
        type="text"
        id="first_name"
        name="first_name"
        class="rounded-md border-neutral-300 focus:ring-green-1001 border-2 hover:border-green-200"
      />
      <p id="error_first_name" class="text-custom_red"></p>
    </div>
    <div class="grid">
      <div class="flex gap-0.5">
        <label for="last_name">Last Name</label>
        <span class="text-custom_green">*</span>
      </div>
      <input
        required
        type="text"
        id="last_name"
        name="last_name"
        class="rounded-md border-neutral-300 focus:ring-green-100 border-2 hover:border-green-200"
      />
      <p id="error_last_name" class="text-custom_red"></p>
    </div>
  </div>
  <div class="grid">
    <div class="flex gap-0.5">
      <label for="email_address">Email Address</label>
      <span class="text-green">*</span>
    </div>
    <input
      required
      type="email"
      id="email_address"
      name="email_address"
      placeholder="email@email.com"
      class="rounded-md border-neutral-300 focus:ring-green border-2 hover:border-green-200"
    />
    <p id="error_email_address" class="text-red-500"></p>
  </div>
  <div class="grid">
    <div class="flex gap-0.5">
      <p>Query Type</p>
      <span class="text-green">*</span>
    </div>
    <div class="flex gap-4 flex-wrap">
      <div class="flex gap-0.5">
        <div
          class="rounded-md border-neutral-300 border-2 py-2 px-5 group peer-hover:border-green-200 peer-focus:ring-1 ring-green-200 flex gap-2 items-center"
        >
          <input
            type="radio"
            value="general-enquiry"
            id="general-enquiry"
            name="query_type"
          />
          <label for="general-enquiry">General Enquiry</label>
        </div>
      </div>
      <div class="flex gap-0.5">
        <div
          class="rounded-md border-neutral-300 border-2 py-2 px-5 group peer-hover:border-green-200 peer-focus:ring-1 ring-green-200 flex gap-2 items-center"
        >
          <input
            type="radio"
            value="support-request"
            id="support-request"
            name="query_type"
          />
          <label for="support-request">Support Request</label>
        </div>
      </div>
    </div>
  </div>
  <div class="grid">
    <div class="flex gap-0.5">
      <label for="message">Message</label>
      <span class="text-green-500">*</span>
    </div>
    <textarea
      id="message"
      name="message"
      class="rounded-md border-neutral-200 focus:ring-green-500 border-2 hover:border-green-500"
    ></textarea>
  </div>
  <div class="flex gap-4 items-center">
    <input
      type="checkbox"
      name="consent"
      id="consent"
      required
      class="rounded-md border text-blue-500 hover:border-blue-500 focus:ring-blue-500"
    />
    <div class="flex gap-0.5">
      <label for="consent">I consent to being contacted by the team</label>
      <span class="text-teal-700">*</span>
    </div>
  </div>
  <button type="submit" class="bg-teal-700 rounded-md py-3 px-2 text-white"
    >Submit</button
  >
</form>

<script>
  import { isInputError } from "astro:actions";
  import { actions } from "astro:actions";

  const btnSubmit = document.querySelector(
    'button[type="submit"]'
  ) as HTMLButtonElement;

  const form = document.querySelector("#contact-form") as HTMLFormElement;
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    btnSubmit.disabled = true;
    btnSubmit.textContent = "Submitting...";
    const formData = new FormData(e.target as HTMLFormElement);
    const { error, data } = await actions.contact(formData);

    if (data) {
      alert("Thank you for your submission!We contact u shortly");
      btnSubmit.disabled = false;
      btnSubmit.textContent = "Submit";
      form.reset();
    }

    if (error && isInputError(error)) {
      console.log(error);
      btnSubmit.disabled = false;
      btnSubmit.textContent = "Submit";
      Object.entries(error.fields).forEach(([label, messages]) => {
        (
          document.querySelector(`#error_${label}`) as HTMLParagraphElement
        ).textContent = messages![0];
        const el = document.querySelector(`#${label}`) as HTMLInputElement;
        el.classList.add("border-red-500", "border-2");
        el.focus();
        el.onblur = () => {
          el.classList.remove("border-red-500");
          (
            document.querySelector(`#error_${label}`) as HTMLParagraphElement
          ).textContent = "";
        };
      });
      e;
    }
  });
</script>
