<div class="flex flex-col gap-3 text-neutral-200 items-start">
  <div>
    <h2 class="text-white text-xl font-bold max-sm:text-left">
      Subscribe to Our Newsletter!
    </h2>
    <p class="text-muted-foreground text-sm max-sm:text-left">
      Join the community and learn from Music Producers and Enthusiasts
    </p>
  </div>
  <form
    method="POST"
    action="/api/newsletter"
    class="flex mx-auto items-end max-w-xl gap-y-4 gap-x-4 max-sm:flex-col"
  >
    <div class="flex flex-col items-start">
      <input
        transition:persist="false"
        type="email"
        name="email"
        required
        aria-required="true"
        placeholder="Enter your email"
        id="email"
        class="bg-teal-900/40 border-2 border-white text-neutral-200 rounded-lg w-full text-white px-6 text-lg h-16"
      />
    </div>
    <button
      type="submit"
      class="bg-primary/50 text-white py-4 px-8 rounded-xl text-2xl h-16"
    >
      Subscribe
    </button>
  </form>
</div>
