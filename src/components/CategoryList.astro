---
import type { CollectionEntry } from "astro:content";
import Category from "./Category.astro";
type Props = {
  categories: CollectionEntry<"posts">["data"]["categories"];
  title?: string;
};

const { categories, title } = Astro.props;
---

<div class="grid grid-cols-[auto,1fr] gap-3 max-lg:grid-cols-1">
  {
    title && (
      <h2 class="font-bold text-2xl md:text-3xl text-zinc-700 dark:text-zinc-200">
        {title}
      </h2>
    )
  }

  <div class="flex gap-3 flex-wrap items-center">
    {categories.map((category) => <Category category={category} />)}
  </div>
</div>
